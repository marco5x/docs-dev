---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/ButtonHome.astro";
import Sidebar from "../../components/Sidebar.astro";
import Pages from "../../components/Pages.astro";
import { devs } from "../../config/api.json";

const devId = Astro.params.devs;

let devsLikes = devs.find((page) => page.id === devId);
---

<Layout title="Tools Developers" description="Tools for developers web">
  <main>
    <Button />
    <div>
      <input type="checkbox" name="" id="side-menu-switch" />
      <div class="side-menu">
        <nav class="cards">
          <div class="scroll">
            {
              devs.map((doc) => (
                <Sidebar
                  id={doc.id}
                  name={doc.name}
                  link={doc.link}
                  logo={doc.logo}
                />
              ))
            }
          </div>
        </nav>
        <label for="side-menu-switch">
          <span class="fas fa-angle-left">üë®üèª‚Äçüíª </span>
        </label>
      </div>
    </div>
    <Pages name={devsLikes?.name} link={devsLikes?.link} />
  </main>
</Layout>

<style>
  main {
    max-height: 100vh;
  }
  .cards {
    display: block;
    flex-direction: column;
    position: fixed;
    height: 93vh;
    max-height: 100vh;
    background-image: linear-gradient(0deg, #18a7ff, #000000);
    overflow-y: scroll;
  }

  .cards::-webkit-scrollbar {
    width: 8px;
    background-color: linear-gradient(0deg, #18a7ff, #000000);
    border-radius: 20px;
  }
  .cards::-webkit-scrollbar:window-inactive {
    display: none;
  }
  .cards::-webkit-scrollbar-thumb {
    background-color: #18a7ff;
    border-radius: 6px;
  }

  .side-menu {
    width: 16.3rem;
    height: 100vh;
    padding: 50px 0;
    box-sizing: border-box;
    background-image: linear-gradient(0deg, #18a7ff, #000000);
    display: flex;
    flex-flow: column nowrap;
    box-shadow: 5px 0px 10px rgba(17, 26, 41, 0.7);
    position: absolute;
    transition: 0.5s;
  }
  .side-menu label {
    position: absolute;
    width: 2.6rem;
    height: 4.8rem;
    background-image: linear-gradient(0deg, #13679b, #0e405f);
    color: #fff;
    right: -40px;
    top: 0;
    bottom: 0;
    margin: auto;
    line-height: 80px;
    text-align: center;
    font-size: 2rem;
    border-radius: 0 10px 10px 0;
  }
  #side-menu-switch {
    position: absolute;
    opacity: 0;
  }
  #side-menu-switch:checked + .side-menu {
    transform: translateX(-100%);
  }
  #side-menu-switch:checked + .side-menu label .fas {
    transform: scaleX(-1);
  }
</style>
